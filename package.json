{
  "name": "new-light-test",
  "description": "New Light Test Task Service built with Elysia Framework, demonstrating task management with logging and queue processing.",
  "version": "0.1.0",
  "scripts": {
    "test": "bun test",
    "dev": "bun run --watch src/server.ts",
    "start": "bun run src/server.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
