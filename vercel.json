{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "bunVersion": "1.x",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "src/server.ts",
      "use": "@vercel/elysia"
    }
  ],
  "routes": [
    {
      "handle": "error"
    },
    {
      "status": 404,
      "src": "^(?!/api).*$",
      "dest": "/404.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "src/server.ts"
    }
  ],
  "headers": [
    {
      "source": "/tasks",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=10, stale-while-revalidate=59"
        }
      ]
    },
    {
      "source": "/tasks/:id",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=59, stale-while-revalidate=59"
        }
      ]
    }
  ]
}
